<ul class="nav">
    {% for item in menu.items %}
        <li class="item-level-0 {% if item.children %}has-child{% endif %}">
            <a href="{% if item.link %}{{ item.link }}{% else %}javascript:void(0){% endif %}"
               class="link-level-0">{{ item.title }}</a>
            {% if item.children %}
                <ul class="level-1">
                    {% for item1 in item.children %}
                        <li class="item-level-1">
                            <a href="{% if item1.link %}{{ item1.link }}{% else %}javascript:void(0){% endif %}" class="link-level-1">{{ item1.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>